@using System.Globalization
@using DE.IDP.Resources
@model DE.IDP.Models.AccountViewModels.LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@inject LocServices SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("Login");
}
<h2>ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-8">
        <section>
            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@Model.ReturnUrl">

            </form>
        </section>
    </div>
    <div class="col-md-8">
        <section>
            <h4>Use another service to log in.</h4>
            <hr />
            @{ 
                var loginProviders = Model.ExternalProviders.ToArray();
                if (loginProviders.length == 0)
                {

                }
                else
                { 
                    <form asp-controller="Account" asp-action="ExternalLogin">

                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync(_ValidationScriptPartial); }    
}